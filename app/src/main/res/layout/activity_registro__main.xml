<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Registro_Main">

    <TextView
        android:id="@+id/txtRegistroFletero"
        android:layout_width="279dp"
        android:layout_height="50dp"
        android:layout_marginBottom="350dp"
        android:text="@string/quieres_ofrecer_tus_servicios_de_fletes_registrate_como_fletero"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegistoCliente_Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/FondoBoton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/fondo_botones"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Registrar Usuario"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistroCliente"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnRegistroFletero_Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/fondo_botones"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Registrar Fletero"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegistroFletero"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtRegistroCliente"
        android:layout_width="268dp"
        android:layout_height="66dp"
        android:text="@string/estas_buscando_un_flete_que_pueda_mover_tus_muebles_registrate_como_usuario"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.569" />

</androidx.constraintlayout.widget.ConstraintLayout>